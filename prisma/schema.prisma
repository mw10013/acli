generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model AccessManager {
  id                      Int             @id
  name                    String          @default("")
  accessPoints            AccessPoint[] 
  cloudLastAccessEventAt  DateTime?
}

model AccessPoint {
  id                Int           @id
  name              String        @default("")
  accessUsers       AccessUser[]
  accessManager     AccessManager @relation(fields: [accessManagerId], references: [id])
  accessManagerId   Int 
  position          Int
  accessEvents      AccessEvent[]

  @@unique([accessManagerId, position])    
}

model AccessUser {
  id                Int         @id
  name              String      @default("") 
  code              String      @unique
  activateCodeAt    DateTime?
  expireCodeAt      DateTime?
  accessPoints      AccessPoint[]
}

model AccessEvent {
  id                Int         @id @default(autoincrement())
  at                DateTime
  access            String
  code              String
  accessUserId      Int? // Not enforced reference to AccessUser which may be deleted.
  accessPoint       AccessPoint @relation(fields: [accessPointId], references: [id])
  accessPointId     Int
}
